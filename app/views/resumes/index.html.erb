                          <select class="form-control m-b" name="nature_cn" onchange="Custom.LinkSelect('nature_cn',     'nature');"><option value="全职">全职</option><option value="兼职">兼职</option><option     value="实习">实习</option></select>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-3 control-label">
